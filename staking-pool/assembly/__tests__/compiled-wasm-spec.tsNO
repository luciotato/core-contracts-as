import { Runtime, Account, stateSize } from "near-sdk-as/runtime";
import { DEFAULT_GAS } from "near-sdk-as/runtime/dist/types";


let runtime: Runtime;
let pool: Account;
const INPUT = "USER123";
const DEPOSIT = "42";

describe("cross contract calls", () => {

  beforeEach(() => {
    runtime = new Runtime();
    pool = runtime.newAccount("staking-pool",
      __dirname + "/../../build/debug/staking-pool.wasm");
  });

  test("single promise", () => {
    let res = pool.call_other("staking-pool", "deposit-and-stake",
      INPUT, DEFAULT_GAS, DEPOSIT);
    let call = res.calls["0"];
    expect(call.input).toBe(`"${INPUT}"`);
    expect(call.attached_deposit).toBe(DEPOSIT);
  });



});
